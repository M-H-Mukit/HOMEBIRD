<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mukit.homebird_v1">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- <activity android:name=".activities.MainActivity" /> -->
        <activity android:name=".activities.SplashActivity" />
        <activity android:name=".activities.RegisteredPeopleActivity" />
        <activity android:name=".activities.ImageSelectionActivity" />
        <activity android:name=".activities.CustomGalleryActivity">
            <intent-filter>
                <action android:name="ACTION_MULTIPLE_PICK" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.AlertActivity" />
        <activity android:name=".activities.AddUnknownFaceActivity" />
        <activity android:name=".activities.UnknownPersonActivity" />
        <activity android:name=".activities.SwipeActivity" />
        <activity android:name=".activities.ZoomedView"></activity>
    </application>

</manifest>